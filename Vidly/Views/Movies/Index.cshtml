@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Vidly.Models.Movie mv in Model)
        {
            <tr>
                <td> @Html.ActionLink(mv.Name, "Edit", "Movies", new { id = mv.Id }, null) </td>
                <td>@mv.Genre.Name</td>
            </tr>
        }
    </tbody>

</table>



